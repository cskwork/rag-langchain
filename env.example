# OpenRouter API Key (for LLM)
OPENROUTER_API_KEY=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

# OpenAI API Key (for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# 모델 설정 (Model Configuration) 
LLM_MODEL=google/gemini-2.5-flash-lite-preview-06-17
EMBEDDING_MODEL=text-embedding-3-small 

# ChromaDB 벡터 데이터베이스 설정 (ChromaDB Vector Database Configuration)
# 로컬 모드 사용 여부 (Whether to use local mode - true: MemoryVectorStore, false: ChromaDB Server)
CHROMA_USE_LOCAL_DB=true

# ChromaDB 컬렉션 이름 (ChromaDB Collection Name)
CHROMA_COLLECTION_NAME=rag_documents

# ChromaDB 영속 디렉토리 (ChromaDB Persist Directory - for file-based storage)
CHROMA_PERSIST_DIR=./chroma_db

# ChromaDB 서버 설정 (ChromaDB Server Configuration - only used when USE_LOCAL_DB=false)
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_SSL=false
CHROMA_TENANT=default_tenant
CHROMA_DATABASE=default_database

# 도구 시스템 설정 (Tool System Configuration)
# 도구 사용 활성화/비활성화 (Enable/disable tool usage - default: true)
ENABLE_TOOLS=true

# SSH 도구 설정 (SSH Tool Configuration)
# SSH 기능 활성화/비활성화 (Enable/disable SSH tool - default: true)
ENABLE_SSH_TOOL=true

# SSH 연결 설정 (SSH Connection Configuration)
SSH_TIMEOUT=30000
SSH_MAX_CONNECTIONS=5
SSH_KEEP_ALIVE_INTERVAL=30000
SSH_RETRY_ATTEMPTS=3
SSH_RETRY_DELAY=2000

# SSH 실행 설정 (SSH Execution Configuration)
SSH_EXEC_TIMEOUT=30000
SSH_EXEC_MAX_RETRIES=2
SSH_MAX_COMMAND_LENGTH=500
SSH_MAX_ARGUMENTS=20
SSH_BUFFER_SIZE=65536
SSH_ENCODING=utf8

# SSH 보안 설정 (SSH Security Configuration)
SSH_ALLOW_SUDO=false
SSH_REQUIRE_SUDO_CONFIRMATION=true

# SSH 세션 관리 (SSH Session Management)
SSH_MAX_IDLE_TIME=300000
SSH_AUTO_CLEANUP=true
SSH_CLEANUP_INTERVAL=60000
SSH_MAX_SESSIONS_PER_SERVER=3

# SSH SFTP 설정 (SSH SFTP Configuration)
SSH_SFTP_ENABLED=true
SSH_SFTP_MAX_FILE_SIZE=10485760
SSH_SFTP_UPLOAD_PATH=/tmp/ssh-tool-uploads
SSH_SFTP_DOWNLOAD_PATH=./downloads

# SSH 로깅 설정 (SSH Logging Configuration)
SSH_LOG_CONNECTIONS=true
SSH_LOG_COMMANDS=true
SSH_LOG_ERRORS=true
SSH_LOG_PERFORMANCE=true
SSH_LOG_LEVEL=info

# SSH 서버 설정 - 프로덕션 (SSH Server Configuration - Production)
SSH_PROD_HOST=your-production-server.com
SSH_PROD_PORT=22
SSH_PROD_USER=your-username
SSH_PROD_AUTH_METHOD=password
SSH_PRODUCTION_PASSWORD=your-secure-password
SSH_PRODUCTION_KEY_PATH=/path/to/your/private/key

# SSH 서버 설정 - 스테이징 (SSH Server Configuration - Staging)
SSH_STAGING_HOST=your-staging-server.com
SSH_STAGING_PORT=22
SSH_STAGING_USER=your-username
SSH_STAGING_AUTH_METHOD=password
SSH_STAGING_PASSWORD=your-secure-password
SSH_STAGING_KEY_PATH=/path/to/your/private/key

# SSH 서버 설정 - 개발 (SSH Server Configuration - Development)
SSH_DEV_HOST=your-dev-server.com
SSH_DEV_PORT=22
SSH_DEV_USER=your-username
SSH_DEV_AUTH_METHOD=password
SSH_DEVELOPMENT_PASSWORD=your-secure-password
SSH_DEVELOPMENT_KEY_PATH=/path/to/your/private/key 